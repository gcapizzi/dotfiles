	email = g.capizzi@gmail.com
[core]
	editor = /usr/bin/vim
	excludesfile = ~/.cvsignore
	autocrlf = input
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	td = "!git lg --since='yesterday'"
	who = shortlog -s --
	aa = add -A
[merge]
	renamelimit = 3315
[diff]
	ignoreSubmodules = dirty
[credential]
	helper = osxkeychain
[push]
	default = simple
