HASH="%Cred%h%Creset"
REFS="%C(yellow)%d%Creset"
RELATIVE_TIME="%Cgreen(%ar)%Creset"
AUTHOR="%C(bold blue)<%an>%Creset"
SUBJECT="%s"

FORMAT="$HASH $REFS $SUBJECT $RELATIVE_TIME $AUTHOR"

pretty_git_log() {
    git log --graph --pretty="tformat:${FORMAT}" $* | less -FXRS
}

pretty_git_log_all() {
    pretty_git_log --branches --remotes --tags
}
