" use Solarized dark on a solarized dark terminal
set background=dark
set t_Co=256
let g:solarized_termcolors=16
colorscheme solarized

" use the_silver_searcher instead of ack
let g:ackprg='ag --nogroup --nocolor --column'

set colorcolumn=80

" ctrlp-cmatcher
let g:ctrlp_match_func = { 'match' : 'matcher#cmatch' }

" vim-clojure-static
autocmd FileType clojure setlocal lispwords+=fact,facts,describe,it,match
